@model List<users>
@{

	var a = Model.LastOrDefault();//使用者是誰就拿誰的資料
	var b = ViewBag.article;
}


<link rel="stylesheet" href="~/PersonalPage/PersonalPage" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.css">
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<br />
<br />
@* @foreach (var item in ViewBag.article)
{
    <p>@item.Title</p>
} *@
<div class="cotainer">
	<div class="g-5 row">
		<div class="col-12 col-md-8">
			<header class="myTitle">
				<h1>@a.Nickname</h1>
				<!-- <svg id="dots" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
					class="bi bi-three-dots" viewBox="0 0 16 16">
					<path
						d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3" />
				</svg> -->
			</header>
			<br>
			<p class="d-inline-flex gap-1">
				
				<form method="post" action="~/PersonalPage/PersonalPage" style="display:flex;">
					<label for="search">

					</label>
					<input id="searchId" name="search" type="text" class="form-control border-dark" style="width:200px;" />&nbsp;
					<input type="submit" value="搜尋" class="btn btn-outline-dark" />
				</form><br />
				<button onclick="album()" type="button" id="albumBtn" class="btn btn-outline-dark" data-bs-toggle="button"
						aria-pressed="true">
					相簿
				</button>
				&nbsp;
				<button onclick="year()" type="button" id="yearBtn" class="btn btn-outline-dark" data-bs-toggle="button"
						aria-pressed="true">
					年度回顧
				</button>&nbsp;
				<button onclick="schedule()" type="button" id="planBtn" class="btn btn-outline-dark" data-bs-toggle="button"
						aria-pressed="true">
					行前規劃
				</button>
			</p>

			@foreach (var item in ViewBag.article)
			{

				<div class="row">
					<div class="myArticle">
						<div style="display:flex;">
							<div class="col-md-8">
								<div class="text">
									<br><br>
									<p class="articleDate">  @item.PublishTime</p>
									<div>
										<a href="/Home/Article/@item.Title" style="color:black;font-weight:bold;">
											<h5 style="overflow: hidden;text-overflow: ellipsis;display: -webkit-box;">
												@item.Title
											</h5>
										</a>
										<p class="text-break" style="overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 3;-webkit-box-orient: vertical;">
											@item.Contents
										</p>
									</div>
									<div class="dropdown">
										<button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
											<svg id="dots" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
												 class="bi bi-three-dots" viewBox="0 0 16 16">
												<path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3" />
											</svg>
										</button>
										<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
											<li><a class="dropdown-item" href="/Home/Article/@item.Title">編輯</a></li>
											<li><a class="dropdown-item" href="#">刪除</a></li>
										</ul>
									</div>
								</div>
							</div>
							<div>
								<div class="articlePhoto col-md-4 mt-5 offset-lg-1" style="width:230px;height:130px;margin-right:20px;">
									<a href="/Home/Article/@item.Title"><img src="@item.Images" class="img-thumbnail mx-auto d-block" alt="..."></a>

								</div>
							</div>
						</div>
					</div>

				</div>
			}

		</div>
		<div class="col-12 col-md-4">
			<div>

				<div id="myProfileImg" class="mb-3">
					<label for="formFileSm" class="form-label"></label>
					<img id="userImageId" class="rounded-circle" src="@a.Headshot" alt="" style="width:100px;height:100px;"><br /><br />
					<input type="file" @* id="userImage" *@ id="formFileSm" class="form-control form-control-sm" value="" /><br />
				</div>
				<div id="myProfileName">
					<b>@a.Nickname</b>
				</div><br />
				<!-- <div class="myProfile">
					<p>31 followers</p>
				</div> -->
				<div class="myProfile" style="block">
					<p>@a.Introduction</p>
				</div><br />
				<!-- <p id="myEdit" class="d-inline-flex gap-1">
					<button type="button" id="yearBtn" class="btn active" data-bs-toggle="button"
						aria-pressed="true">Edit Profile</button>
				</p> -->
				<div id="myPersonalSettings" class="p-2 border border-secondary rounded ">
					<br />
					<h5>個人資料</h5><br />
					<form action="/PersonalPage/Save" method="post">
						<div>
							<label for="">姓名：</label>
							<input type="text" name="UserName" value="@a.UserName" class="form-control">
						</div><br />
						<div>
							<label for="">電話：</label>
							<input type="text" name="Phone" value="@a.Phone" class="form-control">
						</div><br />
						<div>
							<label for="">Mail：</label>
							<input type="text" name="Mail" value="@a.Mail" class="form-control">
						</div><br />
						<div>
							<label for="">性別：</label>
							<input type="text" name="Gender" value="@a.Gender" class="form-control">
						</div><br />
						<div>
							<label for="">密碼：</label>
							<input type="text" name="Pwd" value="@a.Pwd" class="form-control">
						</div><br />
						<div>
							<label for="">暱稱：</label>
							<input type="text" name="Nickname" value="@a.Nickname" class="form-control">
						</div><br />
						<div>
							<label for="">生日：</label>
							<input type="text" name="Birthday" value="@a.Birthday" class="form-control">
						</div><br />
						<div>
							<label for="">地址：</label>
							<input type="text" name="Address" value="@a.Address" class="form-control">
						</div><br />
						<div>
							<label for="">興趣：</label>
							<input type="text" name="Interest" value="@a.Interest" class="form-control">
						</div><br />
						<div>
							<label for="">簡介：</label>
							<textarea type="text" name="Introduction" class="form-control">@a.Introduction</textarea>
							<br />
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<input id="saveSetting" type="submit" value="保存" class="form-control">
						</div><br /><br />

					</form>
				</div>
			</div>
		</div>
	</div>

</div>
<br />
<br />
<br />
<br />
<br />
<script>

	function album() {
		document.location.href = "/Album/Album/";
	}

	function year() {
		document.location.href = "/PersonalPage/Year/";
	}

	function schedule() {
		document.location.href = "/Home/Schedule/";
	}

	$('#formFileSm').on('change', function () {
		console.log("ok");
		var file = this.files[0];
		var formData = new FormData();
		formData.append('file', file);
		$.ajax({
			type: "post",
			url: "/PersonalPage/UserImage",
			data: formData,
			processData: false,  // 禁止 jQuery 處理數據
			contentType: false,  // 禁止 jQuery 設置內容類型
			success: function (data) {
				//console.log(data);
				document.location = "/PersonalPage/PersonalPage/";
				//alert("ok");
			}
		});
	});
</script>